<% content_for :title, "Lista de editoriales" %>
<div id="editorials_index">
  <div class="row">
    <div class="col-sm-12 col-md-offset-3 col-md-6">
      <h1><%= yield :title %></h1>

        <% if @editorials.blank? %>
          <div class="alert alert-warning">No hay editoriales que mostrar</div>
        <% else %>
          <div class="responsive-fake-table expansible-fake-table">
            <header class="row">
              <div class="col-xs-9 col col-sm-9 col-md-9"><%=t('activerecord.attributes.editorial.name')%></div>
              <div class="col-xs-3 col col-sm-3 col-md-3"><span class="hidden-sm hidden-xs">Opciones</span>&nbsp;</div>
            </header>
            <% @editorials.each do |editorial|%>
              <section class="row">
                <div class="col col-xs-9 col-sm-9 col-md-9 toggle"><%=editorial.name %></div>
                <div class="col col-xs-3 col-sm-3 col-md-3">
                  <%= link_to content_tag('i','', class: 'fa fa-eye'), editorial, class: 'tooltipable', title: 'Ver' %>
                  <%= link_to content_tag('i','', class: 'fa fa-pencil-square-o'), edit_editorial_path(editorial), class: 'tooltipable', title: 'Editar' %>
                  <%= link_to content_tag('i','', class: 'fa fa-times'), editorial, method: :delete, data: { confirm: 'Are you sure?' }, class: 'tooltipable', title: 'Eliminar' %>
                </div>
              </section>
            <% end %>
          </div>
        <% end %>

      <%= link_to 'Agregar editorial', new_editorial_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
